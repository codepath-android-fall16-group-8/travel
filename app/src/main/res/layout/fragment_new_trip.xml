<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp" android:layout_height="400dp"
    android:background="@android:color/white"
    >

    <fragment
        android:id="@+id/autocomplete_fragment_new_trip"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvDestination"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/autocomplete_fragment_new_trip"
        android:hint="@string/destination_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btStartNewTrip"
        android:text="@string/start_new_trip"
        android:layout_below="@+id/tvDestination"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>s

</RelativeLayout>