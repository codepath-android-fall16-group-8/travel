<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.CreateStoryActivity"
    tools:showIn="@layout/activity_create_story">

    <EditText
        android:id="@+id/etTripTitle"
        android:hint="@string/hint_trip_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTripDates"
        android:layout_below="@id/etTripTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hint_trip_dates"
        android:drawableLeft="@drawable/ic_calendar"
        android:drawableStart="@drawable/ic_calendar"
        android:gravity="center_vertical"/>

    <EditText
        android:id="@+id/etPlacesOfInterest"
        android:layout_below="@id/tvTripDates"
        android:hint="@string/hint_places_of_interest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btAddNewPlace"
        android:layout_below="@+id/etPlacesOfInterest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_a_place"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvStoryPlaces"
        android:layout_below="@+id/btAddNewPlace"
        android:layout_above="@+id/btCreateTrip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/btCreateTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textAllCaps="true"
        android:text="@string/confirm_story" />

</RelativeLayout>