<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PlaceSuggestionActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/destination_backdrop"
        android:fitsSystemWindows="true">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">

            <ImageView
                android:id="@+id/backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_collapseMode="pin" />

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activities.PlaceSuggestionActivity">

            <TextView
                android:text="@string/sights_to_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rvRestaurantPlaces"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="10dp"
                android:id="@+id/tvSightLabel" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvSightPlaces"
                android:layout_below="@+id/tvSightLabel"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/white"/>

            <TextView
                android:text="@string/places_to_eat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/tvRestaurantLabel"
                android:layout_below="@+id/toolbarHolder"
                android:layout_alignLeft="@+id/tvSightLabel"
                android:layout_alignStart="@+id/tvSightLabel"
                android:layout_alignRight="@+id/tvSightLabel"
                android:layout_alignEnd="@+id/tvSightLabel" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvRestaurantPlaces"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/white"
                android:layout_below="@+id/btnCart"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_bag_cart"
                android:id="@+id/btnCart"
                android:backgroundTint="@color/transparent"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:layout_alignTop="@+id/tvRestaurantLabel"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/tvPlaceCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/badge_circle"
                android:layout_alignTop="@+id/btnCart"
                android:layout_alignRight="@+id/btnCart"
                android:layout_alignEnd="@+id/btnCart" />

            <ImageView
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:background="@color/cardview_dark_background"
                android:layout_height="300dp"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
