<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include
        android:id="@+id/toolbarHolder"
        layout="@layout/layout_app_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/flCoverPicContainer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/thumbnail_size"
            tools:background="@color/cardview_light_background"/>
        <FrameLayout
            android:id="@+id/flUserPicContainer"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/flCoverPicContainer"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="180dp"
            android:layout_width="@dimen/thumbnail_size"
            android:layout_height="@dimen/thumbnail_size"
            tools:background="@color/cardview_dark_background"/>

        <TextView
            android:id="@+id/tvProfileUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="aalshfaslkfhasll"
            android:layout_below="@+id/flCoverPicContainer"
            android:layout_toRightOf="@+id/flUserPicContainer"
            android:layout_toEndOf="@+id/flUserPicContainer"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="11dp"/>

        <ImageButton
            android:id="@+id/ivFollowUser"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_person_add"
            android:layout_below="@id/flCoverPicContainer"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <LinearLayout
            android:id="@+id/followersholder"
            android:orientation="horizontal"
            android:layout_below="@+id/flUserPicContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvFollowersLabel"
                android:text="@string/followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvFollowersCount"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvFollowingLabel"
                android:text="@string/following"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvFollowingCount"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <include
            android:layout_below="@+id/followersholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/layout_tabs"/>
    </RelativeLayout>

</LinearLayout>